//Program to calculate the area of triangles and arrange them in ascendig order and print its dimensions
#include <stdio.h>
#include <stdlib.h>
#include <math.h>

struct triangle
{
	int a;
	int b;
	int c;
};

typedef struct triangle triangle;
double area(triangle tr){
    double p;
    p = (tr.a + tr.b + tr.c) / 2.0;
    return sqrt(p * (p - tr.a) * (p - tr.b) * (p - tr.c));
}
void sort_by_area(triangle* tr, int n) {
	    triangle temp;
    for(int i = 0 ; i < n ; i++){
        for(int j = n-1 ; j > i ; j--){
            if(area(tr[j]) < area(tr[j-1])){
                temp = tr[j];
                tr[j] = tr[j-1];
                tr[j-1] = temp; 
            }
        }
    }
}

int main()
{
	int n;
	scanf("%d", &n);
	triangle *tr = malloc(n * sizeof(triangle));
	for (int i = 0; i < n; i++) {
		scanf("%d%d%d", &tr[i].a, &tr[i].b, &tr[i].c);
	}
	sort_by_area(tr, n);
	for (int i = 0; i < n; i++) {
		printf("%d %d %d\n", tr[i].a, tr[i].b, tr[i].c);
	}
	return 0;
